{
  "compilerOptions": {
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "stripInternal": true,
    "outDir": "lib_commonjs/",
    "rootDir": "src",
    "module": "es2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "decoratorsAs": "static fields",
    "skipTemplateCodegen": true,
    "preserveWhitespaces": false
  }
}
